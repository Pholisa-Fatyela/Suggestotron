<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"> <%= link_to 'View List', topics_path %></li>
  <li><%= link_to 'New topic', new_topic_path %></li>
</ul>

<h1>Listing Topics</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td>
          <span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{topic.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{topic.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
            <%= topic.title %>
          </span>
        </td>
        <td><%= topic.description %></td>
        <td>
          <%= link_to topic, class: 'btn btn-primary btn-xs' do %>
            <i class="glyphicon glyphicon-zoom-in"></i> Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_topic_path(topic), class: 'btn btn-info btn-xs' do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to topic, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
            <i class="glyphicon glyphicon-trash"></i> Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_topic_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New topic
<% end %>
